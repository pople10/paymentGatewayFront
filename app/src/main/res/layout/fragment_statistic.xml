<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StatisticFragment"
    android:orientation="vertical"
    android:background="@color/homebackground">
    <LinearLayout
        android:id="@+id/loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/white">
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:indicatorColor="@color/primary"
            />
    </LinearLayout>
    <ScrollView
        android:visibility="gone"
        android:id="@+id/scrollView_statistic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:paddingBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:cardPreventCornerOverlap="true">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:hint=""
                        app:boxBackgroundColor="@color/white"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxStrokeColor="@color/primary"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp">

                        <AutoCompleteTextView
                            android:id="@+id/balance_name"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:inputType="none" />
                    </com.google.android.material.textfield.TextInputLayout>

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentPadding="5dp"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="5dp"
                    app:cardPreventCornerOverlap="true">
                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="10dp">
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            app:iconTint="@color/white"
                            app:backgroundTint="@color/primary"
                            app:icon="@drawable/ic_baseline_double_arrow_24"
                            android:rotation="-60"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:cornerRadius="50dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Income"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="14sp"
                            android:textColor="@color/gray"
                            android:textFontWeight="400"
                            android:layout_marginTop="10dp" />
                        <TextView
                            android:id="@+id/income_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total"
                            android:fontFamily="sans-serif-light"
                            android:textSize="22sp"
                            android:textColor="@color/TextRegisterG"
                            android:textFontWeight="700"
                            android:layout_marginBottom="15dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentPadding="5dp"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="5dp"
                    app:cardPreventCornerOverlap="true">
                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="10dp">
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            app:iconTint="@color/white"
                            app:backgroundTint="@color/danger"
                            app:icon="@drawable/ic_baseline_double_arrow_24"
                            android:rotation="60"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:cornerRadius="50dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expenst"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="14sp"
                            android:textColor="@color/gray"
                            android:textFontWeight="400"
                            android:layout_marginTop="10dp" />
                        <TextView
                            android:id="@+id/expense_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total"
                            android:fontFamily="sans-serif-light"
                            android:textSize="22sp"
                            android:textColor="@color/TextRegisterG"
                            android:textFontWeight="700"
                            android:layout_marginBottom="15dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPadding="5dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="15sp"
                        android:textColor="@color/gray"
                        android:textFontWeight="400"
                        android:layout_marginTop="10dp" />
                    <TextView
                        android:id="@+id/total_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:fontFamily="sans-serif-light"
                        android:textSize="32sp"
                        android:textColor="@color/TextRegisterG"
                        android:textFontWeight="700"
                        android:layout_marginBottom="15dp"/>
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart_a"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:backgroundTint="@color/white"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>